				<translate value3="0.65 0 -0.32" />
            </transforms> 

            <children>             
                <noderef id="chairLeg" />
            </children> 
        </node>
		
		<node id="chairLeg3">
			<transforms>
				<translate value3="-0.65 0 0.32" />
            </transforms> 

            <children>             
                <noderef id="chairLeg" />
            </children> 
        </node>
		
		<node id="chairLeg4">
			<transforms>
				<translate value3="-0.65 0 -0.32" />
            </transforms> 

            <children>             
                <noderef id="chairLeg" />
            </children> 
        </node>


        <node id="chairSeat">
            <transforms>
                <scale value3="1 0.08 1"/>
            </transforms>

            <children>
                <primitve>
                    <box xy1="0.0 0.0" xy2="1.0 1.0" />
                </primitive>
            </children>
        </node>

        <node id="chairBack">
            <transforms>
                <rotate value3="0 0 90.0">
                <scale value3="1 0.08 1"/>
            </transforms>

            <children>
                <primitve>
                    <box xy1="0.0 0.0" xy2="1.0 1.0" />
                </primitive>
            </children>
        </node>

        <node id="table">
            <transforms>
                <translate value3="0.0 0.0 4.8"/>
            </transforms>   

            <materialref id="tableApp" />
			
            <children>             
				<noderef id="tableLeg1" />
				<noderef id="tableLeg2" />
				<noderef id="tableLeg3" />
				<noderef id="tableLeg4" />
                <noderef id="chairSeat" />
                <noderef id="chairBack" />
            </children>  
        </node>

        <node id="cake">
            <transforms>
                <translate value3="0.0 1.9 4" />
                <rotation value3="0 90.0 0" />
            </transforms>   

            <materialref id="cakeApp" />
                
            <children>             
                <primitive>
                    <cylinder base="0.6" top="0.6" height="0.4" slices="25" stacks="1" capsclosed="true" thetastart=" 0" thetalenght="2 * Math.PI - 1" />
                <primitive>
            </children> 
        </node>

        <node id="lampCable">
            <transforms>
                <translate value3="0.0 0 0" />
            </transforms>   

            <children>             
                <primitive>
                    <cylinder base="0.02" top="0.02" height="1" slices="25" stacks="1" />
                <primitive>
            </children> 
        </node> 

        <node id="lampHead">
            <transforms>
                <translate value3="0.0 -1.1 0" />
            </transforms>   

            <children>             
                <primitive>
                    <sphere radius="0.6" slices="25" stacks="25" thetastart="0" thetalenght="Math.PI / 2" phistart="0" philength="Math.PI * 2"/>
                <primitive>
            </children> 
        </node> 

        <node id="lampBulb">
            <transforms>
                <translate value3="0.0 -0.83 0" />
            </transforms>   

            <materialref id="candleFlameApp" />

            <children>             
                <primitive>
                    <sphere radius="0.4" slices="25" stacks="25" thetastart="Math.PI / 2" thetalenght="Math.PI / 2" phistart="0" philength="Math.PI * 2"/>
                <primitive>
            </children> 
        </node> 

        <node id="lamp">
            <transforms>
                <translate value3="0.0 5.5 4.8" />
            </transforms>   

            <materialref id="candleWaxApp" />

            <children>             
                <noderef id="lampCable" />
				<noderef id="lampHead" />
				<noderef id="lampBulb" />
            </children> 
        </node> 
    </graph>
</yaf> 