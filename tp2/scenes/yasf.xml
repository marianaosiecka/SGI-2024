            </transforms> 

            <children>             
                <primitive>
                    <box xy1="0.0 0.0" xy2="1.0 1.0" />
                </primitive>
            </children> 
        </node>
		
		<node id="tableLeg1">
			<transforms>
				<translate value3="0.45 0 0.42" />
            </transforms> 

            <children>             
                <noderef id="tableLeg" />
            </children> 
        </node>
		
		<node id="tableLeg2">
			<transforms>
				<translate value3="0.45 0 -0.42" />
            </transforms> 

            <children>             
                <noderef id="tableLeg" />
            </children> 
        </node>
		
		<node id="tableLeg3">
			<transforms>
				<translate value3="-0.45 0 0.42" />
            </transforms> 

            <children>             
                <noderef id="tableLeg" />
            </children> 
        </node>
		
		<node id="tableLeg4">
			<transforms>
				<translate value3="-0.45 0 -0.42" />
            </transforms> 

            <children>             
                <noderef id="tableLeg" />
            </children> 
        </node>


        <node id="tableTop">
            <transforms>
                <scale value3="1 0.08 1"/>
            </transforms>

            <children>
                <primitve>
                    <box xy1="0.0 0.0" xy2="6.0 3.8" />
                </primitive>
            </children>
        </node>

        <node id="table">
            <transforms>
                <translate value3="0.0 0.0 4.8"/>
            </transforms>   

            <materialref id="tableApp" />
			
            <children>             
                <noderef id="tableTop" />
				<noderef id="tableLeg1" />
				<noderef id="tableLeg2" />
				<noderef id="tableLeg3" />
				<noderef id="tableLeg4" />
            </children>  
        </node>

        <node id="carpet">
             <transforms>
                <translate value3="0 0 -5"/>
                <scale value3="7.5 0.1 5" />
            </transforms>   

