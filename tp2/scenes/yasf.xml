    <!-- GRAPH BLOCK -->

    <!-- "rootid" identifies the root node -->   
    <graph rootid="scene">
        <!-- there must be one or more "node" blocks composed of: -->

        <!--     node identification (required) -->
        <!--     local geometric transformations (required) -->
        <!--     material (optional) -->
        <!--     descendant (required) -->
        <node id="scene">
            <children> 
                <noderef id="leftWall" /> 
				<noderef id="rightWall" /> 
                <noderef id="frontWall" /> 
				<noderef id="backWall" /> 
				<noderef id="floor" /> 
                <noderef id="ceiling" /> 
				<noderef id="table" /> 
				<noderef id="carpet" /> 
				<noderef id="chair" /> 
				<noderef id="cake" />
				<noderef id="lamp" />

                <pointlight id="light1" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="10.0"
                    distance="0"
                    decay="1.0"
                    castshadow="false"
                    position="0 10.0 0" 
                /> 
			            
                <directionallight id="light2" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity=".5"
                    castshadow="false"
                    position="0 1 0" 
                /> 
            </children> 
        </node>

        <node id="leftWall">
            <transforms>
				<translate value3="0 0 8" />
				<rotate value3="0.0 90 0.0" />
            </transforms> 

			<materialref id="wallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="15 6" />
                </primitive>
            </children> 
        </node>
        
        <node id="rightWall">
            <transforms>
				<translate value3="0 0 -8" />
				<rotate value3="0.0 90 0.0" />
            </transforms> 

			<materialref id="wallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="15 6" />
                </primitive>
            </children> 
        </node>

        <node id="frontWall">
            <transforms>
				<translate value3="7.5 0 0" />
				<rotate value3="0.0 0.0 0.0" />
            </transforms> 

			<materialref id="wallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="16 6" />
                </primitive>
            </children> 
        </node>

        <node id="backWall">
            <transforms>
				<translate value3="-7.5 0 0" />
				<rotate value3="0.0 0.0 0.0" />
            </transforms> 

			<materialref id="wallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="16 6" />
                </primitive>
            </children> 
        </node>

        <node id="floor">
			<transforms>
				<translate value3="0 0 0" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

			<materialref id="floorApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="15 16" />
                </primitive>
            </children> 
        </node>

        <node id="ceiling">
            <transforms>
				<translate value3="0 6 0" />
				<rotate value3="0.0 0.0 0.0" />
            </transforms> 

			<materialref id="wallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="15 16" />
                </primitive>
            </children> 
        </node>

        <!--formato da perna da mesa; as outras "legs" só mudam a posição-->
